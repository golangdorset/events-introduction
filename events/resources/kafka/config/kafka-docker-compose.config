# https://kafka.apache.org/20/documentation.html#brokerconfigs
broker.id=0
delete.topic.enable=true
auto.create.topics.enable=true
num.network.threads=3
num.io.threads=8
socket.send.buffer.bytes=102400
socket.receive.buffer.bytes=102400
socket.request.max.bytes=104857600
log.dirs=/opt/kafka/data/logs
num.partitions=15
num.recovery.threads.per.data.dir=8
log.retention.hours=-1
offsets.retention.minutes=43200
log.retention.bytes=805306368000
log.segment.bytes=524288000
log.retention.check.interval.ms=60000
log.flush.offset.checkpoint.interval.ms=10000
log.cleaner.delete.retention.ms=60000
zookeeper.connect=zk:2181
zookeeper.connection.timeout.ms=10000
unclean.leader.election.enable=false
log.message.format.version=2.0.1
message.max.bytes=2000012
replica.fetch.max.bytes=2048576
replica.fetch.response.max.bytes=2048576
offsets.topic.replication.factor=0
min.insync.replicas=0
